{% extends 'base.html.twig' %}

{% block title %}My Orders - SHOP{% endblock %}

{% block body %}
    <h2>View My Orders</h2>
    {% if orders is not empty %}
        <table class="table mt-4">
            <thead>
            <tr>
                <th scope="col">Items</th>
                <th scope="col">Status</th>
                <th scope="col">Total</th>
                <th scope="col">Placed on</th>
                <th scope="col">Reference</th>
                <th></th>
            </tr>
            </thead>
            <tbody>
            {% for order in orders %}
                <tr>
                    <td>{{ order.totalQuantity }}</td>
                    <td>
                        {% if order.state == 1 %}
                            Payment accepted
                        {% elseif order.state == 2 %}
                            In preparation
                        {% else %}
                            Shipped
                        {% endif %}
                    </td>
                    <td>{{ ((order.carrierPrice + order.total) / 100)|number_format(2, ',', '.') }} â‚¬</td>
                    <td>{{ order.createdAt|date('d/m/Y') }}</td>
                    <td><span class="badge badge-secondary">{{ order.reference }}</span></td>
                    <td><a href="{{ path('account_order', {'reference': order.reference}) }}">View order</a></td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    {% else %}
        <p>You haven't placed any orders yet.</p>
    {% endif %}
    <a href="{{ path('account') }}" title="Back to your member area">Return to My Account</a>
{% endblock %}
