{% extends 'base.html.twig' %}

{% block title %}My order - SHOP{% endblock %}

{% block body %}
    <h2>I confirm my order</h2>
    <div class="row">
        <div class="col-md-6">
            <strong class="summary-label">Summary:</strong>
            <div class="cart-summary">
                {% for item in cart.products %}
                    <div class="row">
                        <div class="col-2 my-auto"><img height="50px" src="/uploads/{{ item.product.image }}" alt="{{ item.product.name }}"></div>
                        <div class="col-8 my-auto">{{ item.product.name }}</div>
                        <div class="col-2 my-auto">x{{ item.quantity }}</div>
                    </div>
                {% endfor %}
                <hr>
                <div class="row">
                    <div class="col-9 font-weight-bold">Total</div>
                    <div class="col-3 font-weight-bold">{{ (totalPrice / 100)|number_format(2,',','.') }} â‚¬</div>
                </div>
            </div>
        </div>
    </div>

{% endblock %}
